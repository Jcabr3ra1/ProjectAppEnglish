<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/backg"
    tools:context=".Menu_Juego">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="32dp"
        android:paddingBottom="32dp"
        android:gravity="center_horizontal">

        <!-- Título del menú -->
        <TextView
            android:id="@+id/tvMenuTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/juegos"
            android:textColor="@color/sky_blue"
            android:textSize="32sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="20dp" />

        <!-- Imagen  -->
        <ImageView
            android:id="@+id/ivLogoMenu"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:src="@drawable/menu_juegos"
            android:contentDescription="@string/content_menu_illustration"
            android:layout_marginBottom="24dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter" />

        <!-- Botones -->
        <Button
            android:id="@+id/btnColores"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="56dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:text="@string/menu_colors"
            android:onClick="irJuegoIngles"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-medium"
            android:backgroundTint="@color/sun_yellow"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp"
            android:foreground="?attr/selectableItemBackground" />

        <Button
            android:id="@+id/btnFrutas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="56dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:text="@string/menu_fruits"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-medium"
            android:backgroundTint="@color/grass_green"
            android:layout_marginBottom="12dp"
            android:foreground="?attr/selectableItemBackground" />

        <Button
            android:id="@+id/btnNumeros"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="56dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:text="@string/menu_numbers"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-medium"
            android:backgroundTint="@color/grape_purple"
            android:layout_marginBottom="12dp"
            android:foreground="?attr/selectableItemBackground" />

        <Button
            android:id="@+id/btnAnimales"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="56dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:text="@string/menu_animals"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-medium"
            android:backgroundTint="@color/coral_orange"
            android:layout_marginBottom="12dp"
            android:foreground="?attr/selectableItemBackground" />

        <Button
            android:id="@+id/btnVocales"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="56dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:text="@string/menu_vowels"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-medium"
            android:backgroundTint="@color/sky_blue"
            android:layout_marginBottom="6dp"
            android:foreground="?attr/selectableItemBackground" />

    </LinearLayout>
</ScrollView>
