<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backg"
    android:padding="16dp"
    tools:context=".Animales">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <!-- TÍTULO -->
        <TextView
            android:id="@+id/tvTitleAnimales"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/title_animals"
            android:textColor="@color/sky_blue"
            android:textSize="30sp"
            android:textStyle="bold" />

        <!-- GRILLA -->
        <GridLayout
            android:id="@+id/gridAnimales"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alignmentMode="alignMargins"
            android:columnCount="2"
            android:useDefaultMargins="true">

            <!-- Conejo -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgConejo"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/img_rabbit"
                    android:scaleType="fitCenter"
                    android:src="@drawable/rabbit" />

                <!-- audios -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/btnEsConejo"
                        android:layout_width="55dp"
                        android:layout_height="35dp"
                        android:adjustViewBounds="true"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="@string/audio_es"
                        android:onClick="soundRabbitEs"
                        android:padding="2dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_es" />

                    <ImageButton
                        android:id="@+id/btnEnConejo"
                        android:layout_width="55dp"
                        android:layout_height="35dp"
                        android:layout_marginStart="8dp"
                        android:adjustViewBounds="true"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="@string/audio_en"
                        android:onClick="soundRabbitEn"
                        android:padding="2dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_en" />

                </LinearLayout>
            </LinearLayout>

            <!-- Perro -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgPerro"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/img_dog"
                    android:scaleType="fitCenter"
                    android:src="@drawable/dog" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <!-- audios -->
                    <ImageButton
                        android:id="@+id/btnEsPerro"
                        android:layout_width="55dp"
                        android:layout_height="35dp"
                        android:adjustViewBounds="true"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="@string/audio_es"
                        android:onClick="soundDogEs"
                        android:padding="2dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_es" />

                    <ImageButton
                        android:id="@+id/btnEnPerro"
                        android:layout_width="55dp"
                        android:layout_height="35dp"
                        android:layout_marginStart="8dp"
                        android:adjustViewBounds="true"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="@string/audio_en"
                        android:onClick="soundDogEn"
                        android:padding="2dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_en" />
                </LinearLayout>
            </LinearLayout>

            <!-- Gato -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgGato"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/img_Cat"
                    android:scaleType="fitCenter"
                    android:src="@drawable/cat" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <!-- audios -->
                    <ImageButton
                        android:id="@+id/btnEsGato"
                        android:layout_width="55dp"
                        android:layout_height="35dp"
                        android:adjustViewBounds="true"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="@string/audio_es"
                        android:onClick="soundCatEs"
                        android:padding="2dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_es" />

                    <ImageButton
                        android:id="@+id/btnEnGato"
                        android:layout_width="55dp"
                        android:layout_height="35dp"
                        android:layout_marginStart="8dp"
                        android:adjustViewBounds="true"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="@string/audio_en"
                        android:onClick="soundCatEn"
                        android:padding="2dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_en" />
                </LinearLayout>
            </LinearLayout>

            <!-- Tigre -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgTigre"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/img_tiger"
                    android:scaleType="fitCenter"
                    android:src="@drawable/tiger" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <!-- audios -->
                    <ImageButton
                        android:id="@+id/btnEsTigre"
                        android:layout_width="55dp"
                        android:layout_height="35dp"
                        android:adjustViewBounds="true"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="@string/audio_es"
                        android:onClick="soundTigerEs"
                        android:padding="2dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_es" />

                    <ImageButton
                        android:id="@+id/btnEnTigre"
                        android:layout_width="55dp"
                        android:layout_height="35dp"
                        android:layout_marginStart="8dp"
                        android:adjustViewBounds="true"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="@string/audio_en"
                        android:onClick="soundTigerEn"
                        android:padding="2dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_en" />
                </LinearLayout>
            </LinearLayout>

            <!-- Vaca -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgVaca"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/img_cow"
                    android:scaleType="fitCenter"
                    android:src="@drawable/cow" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <!-- audios -->
                    <ImageButton
                        android:id="@+id/btnEsVaca"
                        android:layout_width="55dp"
                        android:layout_height="35dp"
                        android:adjustViewBounds="true"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="@string/audio_es"
                        android:onClick="soundCowEs"
                        android:padding="2dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_es" />

                    <ImageButton
                        android:id="@+id/btnEnVaca"
                        android:layout_width="55dp"
                        android:layout_height="35dp"
                        android:layout_marginStart="8dp"
                        android:adjustViewBounds="true"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="@string/audio_en"
                        android:onClick="soundCowEn"
                        android:padding="2dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_en" />
                </LinearLayout>
            </LinearLayout>

            <!-- Pájaro -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgPajaro"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/img_bird"
                    android:scaleType="fitCenter"
                    android:src="@drawable/bird" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <!-- audios -->
                    <ImageButton
                        android:id="@+id/btnEsPajaro"
                        android:layout_width="55dp"
                        android:layout_height="35dp"
                        android:adjustViewBounds="true"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="@string/audio_es"
                        android:onClick="soundBirdEs"
                        android:padding="2dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_es" />

                    <ImageButton
                        android:id="@+id/btnEnPajaro"
                        android:layout_width="55dp"
                        android:layout_height="35dp"
                        android:layout_marginStart="8dp"
                        android:adjustViewBounds="true"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="@string/audio_en"
                        android:onClick="soundBirdEn"
                        android:padding="2dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_en" />
                </LinearLayout>
            </LinearLayout>
        </GridLayout>
    </LinearLayout>
</ScrollView>
